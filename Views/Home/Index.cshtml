@model List<tblElasticData>
@{
    ViewData["Title"] = "Elastic Data";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form method="get">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchSubject" placeholder="Search by Subject">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>

    @if (Model.Count > 0)
    {
        <h3>Search Results:</h3>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>To</th>
                        <th>From</th>
                        <th>Event Type</th>
                        <th>Event Date</th>
                        <th>Channel</th>
                        <th>Message Category</th>
                        <th>Subject</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.To</td>
                            <td>@item.From</td>
                            <td>@item.EventType</td>
                            <td>@item.EventDate</td>
                            <td>@item.Channel</td>
                            <td>@item.MessageCategory</td>
                            <td>@item.Subject</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    @*else if (!string.IsNullOrEmpty(Request.Query["searchSubject"]))
    {
    <p>No results found.</p>
    }*@
</div>
